{
  "extends": "tsconfig/base.json",
  "compilerOptions": {
    "jsx": "preserve",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "module": "ESNext",
    "target": "ESNext",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "types": ["vitest/globals"],
    "esModuleInterop": true
  },
  "exclude": ["node_modules", "dist", "*stories*"]
}
